          pre(class="prettyprint language-html")
            code(class="language-html").
              &lt;h1&gt;&lt;/h1&gt;
        
        +example("css")
          pre(class="prettyprint language-js")
            code(class="language-js").
              function hello() {
                console.log("hello")
              }
    
  div(class="row")
    div(class="col col-2")
      h1.normal Heading 1
      h2.normal Heading 2
      h3.normal Heading 3
      h4.normal Heading 4
      h5.normal Heading 5
      h6.normal Heading 6
    
    div(class="col col-2")
      div(class="examples")
        +example("html")
          pre(class="prettyprint language-html")
            code(class="language-html").
              &lt;h1&gt;&lt;/h1&gt;
        
        +example("css")
          pre(class="prettyprint language-js")
            code(class="language-js").
              function hello() {
                console.log("hello")
              }
