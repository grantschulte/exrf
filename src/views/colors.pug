      div(class="color-box bg--black-alt--l1")
      div(class="color-box bg--black-alt--l2")
      div(class="color-box bg--black-alt--l3")
        
    div(class="page-grid__item flex-col")
      +code-example("scss")
        pre(class="language-scss")
          code(class="language-scss").
            .bg--black-alt {
              background-color: $black-alt;
            }
            
            .color--black-alt {
              color: $black-alt;
            }
            
  div(class="row row--heading")
    div(class="col")
      h4(class="heading sm up") Black
      
  div(class="page-grid row")
    div(class="page-grid__item")
      div(class="color-box bg--black")
      div(class="color-box bg--black")
      div(class="color-box bg--black")
      div(class="color-box bg--black")
        
    div(class="page-grid__item flex-col")
      +code-example("scss")
        pre(class="language-scss")
          code(class="language-scss").
            .bg--black {
