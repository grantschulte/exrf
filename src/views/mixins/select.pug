mixin slct(label, name, opts)
  div(id=`slct-${name}`, class="slct js-slct")
    label(class="slct__label")
      span(class="med")= label
      span :
      
    span(class="slct__value-label")
    
    select(
      id=`slct-${name}__el`,
      name=name
      class="slct__el",
      hidden)
      
      each opt in opts
        option(value=opt.id)= opt.name
        
    span(class="material-icons slct__arrow") arrow_drop_down
